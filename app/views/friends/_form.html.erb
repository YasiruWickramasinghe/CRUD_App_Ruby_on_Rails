<%= form_with(model: friend) do |form| %>
  <div class="field form-group">
    <%= form.label :first_name, style: "display: block" %>
    <%= form.text_field :first_name, class:"form-control", placeholder:"First Name"%>
    <% if @friend.errors[:first_name].any? %>
      <div class="error-message" style="color: red; font-size: 0.8rem;">
        <%= @friend.errors[:first_name].first %>
      </div>
    <% end %>
  </div>
  <div class="field form-group">
    <%= form.label :last_name, style: "display: block" %>
    <%= form.text_field :last_name, class:"form-control", placeholder:"Last Name" %>
    <% if @friend.errors[:last_name].any? %>
      <div class="error-message" style="color: red; font-size: 0.8rem;">
        <%= @friend.errors[:last_name].first %>
      </div>
    <% end %>
  </div>
  <div class="field form-group">
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email, class:"form-control", placeholder:"Email" %>
    <% if @friend.errors[:email].any? %>
      <div class="error-message" style="color: red; font-size: 0.8rem;">
        <%= @friend.errors[:email].first %>
      </div>
    <% end %>
  </div>
  <div class="field form-group">
    <%= form.label :phone, style: "display: block" %>
    <%= form.text_field :phone, class:"form-control", placeholder:"Phone" %>
    <% if @friend.errors[:phone].any? %>
      <div class="error-message" style="color: red; font-size: 0.8rem;">
        <%= @friend.errors[:phone].first %>
      </div>
    <% end %>
  </div>
  <div class="field form-group">
    <%= form.label :twitter, style: "display: block" %>
    <%= form.text_field :twitter, class:"form-control", placeholder:"Twitter" %>
    <% if @friend.errors[:twitter].any? %>
      <div class="error-message" style="color: red; font-size: 0.8rem;">
        <%= @friend.errors[:twitter].first %>
      </div>
    <% end %>
  </div>
  <div class="field form-group">
    <%= form.number_field :user_id, id: :friend_user_id, class:"form-control", value: current_user.id, type: :hidden %>
  </div>
  <br>
  <div class="card text-center">
    <%= form.submit "SUBMIT", class:"btn btn-success"%>
  </div>
<% end %>
